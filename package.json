{
  "name": "webpack-4-simple-boilerplate-react",
  "version": "1.0.0",
  "description": "Simple Webpack 4 boilerplate for quick starting React projects.",
  "author": "Orestis Herodotou <orestis@digitaltopo.net>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config ./config/webpack.config.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.prod.js",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "lint:fix-all": "eslint --fix .",
    "precommit": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf node_modules/ && rm -rf dist/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digitaltopo/webpack-4-simple-boilerplate/tree/react"
  },
  "bugs": {
    "url": "https://github.com/digitaltopo/webpack-4-simple-boilerplate/issues",
    "email": "admin@digitaltopo.net"
  },
  "browserslist": [
    "> 1%",
    "ie > 9"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-emotion": "^10.0.6",
    "clean-webpack-plugin": "^1.0.0",
    "cross-env": "^5.2.0",
    "dotenv-webpack": "^1.6.0",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "eslint-plugin-react-hooks": "0.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "engines": {
    "node": ">=9.3.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,md}": [
      "eslint --fix src",
      "git add"
    ]
  },
  "dependencies": {
    "emotion": "^10.0.6",
    "prop-types": "^15.6.2",
    "react": "^16.8.0-alpha.0",
    "react-dom": "^16.8.0-alpha.0",
    "react-emotion": "^10.0.0",
    "react-hot-loader": "^4.6.3"
  }
}
