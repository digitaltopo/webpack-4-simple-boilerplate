{
  "name": "webpack-4-simple-boilerplate",
  "version": "1.0.0",
  "description": "Simple Webpack 4 boilerplate for quick starting projects.",
  "author": "Orestis Herodotou <orestis@digitaltopo.net>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config ./config/webpack.config.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.prod.js",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "precommit": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf node_modules/ && rm -rf dist/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:digitaltopo/webpack-4-simple-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/digitaltopo/webpack-4-simple-boilerplate/issues",
    "email": "admin@digitaltopo.net"
  },
  "browserslist": [
    "> 1%",
    "ie > 9"
  ],
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.6",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-emotion": "^9.2.11",
    "clean-webpack-plugin": "^1.0.0",
    "cross-env": "^5.2.0",
    "dotenv-webpack": "^1.5.7",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.4",
    "lint-staged": "^8.0.4",
    "node-notifier": "^5.3.0",
    "prettier": "^1.15.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  },
  "engines": {
    "node": ">=9.3.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,md}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "dependencies": {
    "emotion": "^9.2.12",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-emotion": "^9.2.12",
    "react-hot-loader": "^4.3.12"
  }
}
