{
    "name": "webpack-4-simple-boilerplate",
    "version": "1.0.0",
    "description": "Simple Webpack 4 boilerplate for quick starting projects.",
    "author": "Orestis Herodotou <orestis@digitaltopo.net>",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "start":
            "cross-env NODE_ENV=development webpack-dev-server --mode development --config ./config/webpack.config.dev.js",
        "build":
            "cross-env NODE_ENV=production webpack --mode production --config ./config/webpack.config.prod.js",
        "lint": "eslint ./src",
        "lint:fix": "eslint --fix ./src",
        "precommit": "lint-staged",
        "test": "echo \"Error: no test specified\" && exit 1",
        "clean": "rm -rf node_modules/ && rm -rf dist/"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:digitaltopo/webpack-4-simple-boilerplate.git"
    },
    "bugs": {
        "url":
            "https://github.com/digitaltopo/webpack-4-simple-boilerplate/issues",
        "email": "admin@digitaltopo.net"
    },
    "browserlist": ["> 1%", "ie > 9"],
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.2.2",
        "babel-loader": "^7.1.4",
        "babel-preset-env": "^1.6.1",
        "clean-webpack-plugin": "^0.1.19",
        "cross-env": "^5.1.4",
        "dotenv-webpack": "^1.5.5",
        "eslint": "^4.19.1",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-import": "^2.10.0",
        "eslint-plugin-prettier": "^2.6.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^0.14.3",
        "lint-staged": "^7.0.4",
        "prettier": "^1.11.1",
        "webpack": "^4.5.0",
        "webpack-cli": "^2.0.14",
        "webpack-dev-server": "^3.1.3",
        "webpack-merge": "^4.1.2"
    },
    "engines": {
        "node": ">=9.3.0"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,json,css,md}": ["eslint --fix src", "git add"]
    }
}
